/*===== Variables =====*/
$animation-delay = .5s

/*===== Mixin =====*/
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

transition(property)
  if property == "none"
    -webkit-transition property
    -moz-transition property
    -ms-transition property
    -o-transition property
    transition property
  else
    -webkit-transition property $animation-delay
    -moz-transition property $animation-delay
    -ms-transition property $animation-delay
    -o-transition property $animation-delay
    transition property $animation-delay

transform()
  -webkit-transform arguments
  -moz-transform arguments
  -o-transform arguments
  -ms-transform arguments
  transform arguments

animation()
  -webkit-animation arguments
  -moz-animation arguments
  -o-animation arguments
  animation arguments

title-font(size)
  font 300 size "Open Sans Condensed", sans-serif

section-titles(border-color, color)
  padding 55px 0 70px
  text-align center
  h3
    position relative
    width 600px
    margin 0 auto
    border-bottom 2px solid border-color
    title-font(64px)
    letter-spacing .1em
    line-height 100px
    text-transform uppercase
    color color
    &:after
      content ""
      position absolute
      bottom -16px
      left 50%
      margin 0 0 0 -14px
      width 0
      height 0
      border-style solid
      border-width 14px 14px 0 14px
      border-color border-color transparent transparent transparent

fixed-backgrounds(image-url)
  background image-url top center no-repeat
  background-size cover
  background-attachment fixed

/*===== Default classes =====*/
body
  font 16px "Open Sans", sans-serif

.content-center
  width 940px
  margin 0 auto

.wrapper
  > section
    position relative
    article
      line-height 1.5em

.next-step
  position absolute
  left 50%
  bottom 30px
  margin 0 0 0 -14px
  title-font(44px)
  text-align center
  color #fff
  span
  i
    display block
    position relative
    z-index 10
  span
    margin 15px 0 0
  i
    opacity .5
    transition(all)
  &:hover
  &:focus
    color #fff
    text-decoration none
    i
      opacity 1
  &.about-step
    bottom 70px
    width 212px
    height 106px
    margin 0 0 0 -106px
    title-font(22px)
    i
      opacity 1
    &:before
      content ""
      position absolute
      top 0
      left 0
      width 0
      height 0
      border-style solid
      border-width 106px 106px 0 106px
      border-color rgba(0, 0, 0, .5) transparent transparent transparent
      transition(all)
    &:hover
    &:focus
      &:before
        border-color rgba(0, 0, 0, .7) transparent transparent transparent
      i
        padding 10px 0 0
