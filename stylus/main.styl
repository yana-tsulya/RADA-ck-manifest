    position relative
    z-index 10
  span
    margin 15px 0 0
  i
    color rgba(255, 255, 255, .5)
    transition(all)
  &:hover
  &:focus
    color #fff
    text-decoration none
    i
      color #fff
  &.about-step
    bottom 70px
    width 212px
    height 106px
    margin 0 0 0 -106px
    title-font(22px)
    i
      color #fff
    &:before
      content ""
      position absolute
      top 0
      left 0
      width 0
      height 0
      border-style solid
      border-width 106px 106px 0 106px
      border-color rgba(0, 0, 0, .5) transparent transparent transparent
      transition(all)
    &:hover
    &:focus
      &:before
        border-color rgba(0, 0, 0, .7) transparent transparent transparent
      i
        padding 10px 0 0

