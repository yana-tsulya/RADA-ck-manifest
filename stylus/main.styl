/*===== Variables =====*/
$animation-delay = .5s

/*===== Mixin =====*/
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

transition(property)
  if property == "none"
    -webkit-transition property
    -moz-transition property
    -ms-transition property
    -o-transition property
    transition property
  else
    -webkit-transition property $animation-delay
    -moz-transition property $animation-delay
    -ms-transition property $animation-delay
    -o-transition property $animation-delay
    transition property $animation-delay

transform()
  -webkit-transform arguments
  -moz-transform arguments
  -o-transform arguments
  -ms-transform arguments
  transform arguments

animation()
  -webkit-animation arguments
  -moz-animation arguments
  -o-animation arguments
  animation arguments

title-font(size)
  font 300 size "Open Sans Condensed", sans-serif

section-titles(border-color, color)
  padding 0 0 70px
  text-align center
  h3
    position relative
    width 600px
    margin 0 auto
    border-bottom 2px solid border-color
    title-font(64px)
    letter-spacing .1em
    line-height 100px
    text-transform uppercase
    color color
    &:after
      content ""
      position absolute
      bottom -16px
      left 50%
      margin 0 0 0 -14px
      width 0
      height 0
      border-style solid
      border-width 14px 14px 0 14px
      border-color border-color transparent transparent transparent

fixed-background(image-url)
  .section-image
    position fixed
    top 0
    width 100%
    height 100%
    background image-url no-repeat 50% 50%
    -webkit-background-size cover
    -moz-background-size cover
    -o-background-size cover
    background-size cover

normal-background(image-url)
  background image-url 50% 0 no-repeat
  -webkit-background-size cover
  -moz-background-size cover
  -o-background-size cover
  background-size cover

