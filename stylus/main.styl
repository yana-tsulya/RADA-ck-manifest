.transparent
  opacity 0

.untransparent
  opacity 1

.section-clipper
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  clip rect(auto,auto,auto,auto)
  width 100%
  height 100%

.next-step
  position absolute
  left 50%
  bottom 30px
  margin 0 0 0 -14px
  title-font(44px)
  text-align center
  color #fff
  span
  i
