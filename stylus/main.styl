.welcome
  z-index 15
  fixed-backgrounds(url("../img/welcome.jpg"))

.header-wrapper
  position absolute
  top 0
  left 0
  right 0

.header
  overflow hidden
  position relative
  padding 190px 0 0
  .content-center
    position relative

.logo
  margin 0 15px 0 0

.header-right-wrap
  overflow hidden

.slogan
  margin 0 0 20px
  title-font(48px)
  letter-spacing .1em
  line-height .8em
  text-transform uppercase
  color #fff
  span
    display block
    opacity .5

.values-list
.social-links-list
  overflow hidden
  margin 0
  padding 0
  list-style none

.value-item
  float left
  margin 0 25px 0 0
  &:last-child
    margin 0

.value-link
  title-font(18px)
  color rgba(255, 255, 255, 1)
  transition(color)
  span
    display block
    opacity .5
    title-font(14px)
    transition(opacity)
  &:hover
  &:focus
    text-decoration none
    span
      opacity 1

.social-links-wrap
  position absolute
  top -165px
  right 25px

.social-links-list
  overflow visible

.social-link-item
  float left
  margin 0 5px 0 0
  &:last-child
    margin 0
  .social-link
    display block
    width 20px
    height 20px
    background url("../img/social-icons-sprite@2x.png") no-repeat
    background-size 69px 20px
    text-indent -9999px
    transition(all)
    &:hover
    &:focus
      transform(scale(1.2))
      /*transform(rotateY(360deg))*/
  &.fb
    .social-link
      background-position 0 0
  &.vk
    .social-link
      background-position -25px 0
  &.tw
    .social-link
      background-position -49px 0

